mixin mcq-8-1()
  main.sub
    .containers
      #Section1.tabcontent
        ul.quiz
          li.quiz-box
            h3 Question1: What is the difference between a “copycat” and a “fork”?
            ul.choices
              li.answer-box
                label
                  input(type='radio' name='question1' value='buffer')
                  span The existent database is "reused" in a "copycat"
              li.answer-box
                label
                  input(type='radio' name='question1' value='function')
                  span The existent database is "reused" in a "fork"


          li.quiz-box
            h3 Question2: Proposition: a change/update in a protocol can lead to two different blockchains.
            ul.choices
              li.answer-box
                label
                  input(type='radio' name='question1' value='buffer')
                  span True
              li.answer-box
                label
                  input(type='radio' name='question1' value='function')
                  span False


        .button-box
          button.view-results#viewResults View Results
          span#myresults.my-results My results will appear here
          span#myresultsDescription.my-results-description Description

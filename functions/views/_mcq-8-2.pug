mixin mcq-8-2()
  main.sub
    .containers
      #Section1.tabcontent
        ul.quiz


          li.quiz-box
            h3 Question1: The block size is a mutable rule.
            ul.choices
              li.answer-box
                label
                  input(type='radio' name='question1' value='buffer')
                  span True
              li.answer-box
                label
                  input(type='radio' name='question1' value='function')
                  span False

          li.quiz-box
            h3 Question2: Proposition: Will a “set in stone” (fixed) protocol in the future probably be a pre-condition for participants in the ecosystem?
            ul.choices
              li.answer-box
                label
                  input(type='radio' name='question1' value='buffer')
                  span Less obvious
              li.answer-box
                label
                  input(type='radio' name='question1' value='function')
                  span More obvious

        .button-box
          button.view-results#viewResults View Results
          span#myresults.my-results My results will appear here
          span#myresultsDescription.my-results-description Description

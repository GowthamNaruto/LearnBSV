mixin mcq-9-2()
  main.sub
    .containers
      #Section1.tabcontent
        ul.quiz

          li.quiz-box
            h3 Question1: Proposition: Law enforcement need a court order to investigate transaction on the public ledger?
            ul.choices
              li.answer-box
                label
                  input(type='radio' name='question1' value='buffer')
                  span True
              li.answer-box
                label
                  input(type='radio' name='question1' value='function')
                  span False

          li.quiz-box
            h3 Question2: Proposition: a miner can execute a court order to “delete” data.
            ul.choices
              li.answer-box
                label
                  input(type='radio' name='question1' value='buffer')
                  span True
              li.answer-box
                label
                  input(type='radio' name='question1' value='function')
                  span False



        .button-box
          button.view-results#viewResults View Results
          span#myresults.my-results My results will appear here
          span#myresultsDescription.my-results-description Description

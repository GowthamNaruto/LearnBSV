mixin mcq-2-5()
  main.sub
    .containers
      #Section1.tabcontent
        ul.quiz
          li.quiz-box
            h3 Question1: What are the main reasons people cannot access financial services?
            ul.choices
              li.answer-box
                label
                  input(type='radio' name='question1' value='buffer')
                  span Accounts are too expensive
              li.answer-box
                label
                  input(type='radio' name='question1' value='function')
                  span Financial institutions too far away
              li.answer-box
                label
                  input(type='radio' name='question1' value='global')
                  span Lack of necessary documentation
              li.answer-box
                label
                  input(type='radio' name='question1' value='number')
                  span All of the above


 

          li.quiz-box
            h3 Question2: Most of the adults without financial services are women.
            ul.choices
              li.answer-box
                label
                  input(type='radio' name='question2' value='buffer')
                  span True
              li.answer-box
                label
                  input(type='radio' name='question2' value='function')
                  span False



        .button-box
          button.view-results#viewResults View Results
          span#myresults.my-results My results will appear here
          span#myresultsDescription.my-results-description Description
